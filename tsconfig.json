{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@": ["./*"]
    }
  },
  "include": ["./src/", "./config/", "config"],
  "exclude": ["node_modules"]
}
